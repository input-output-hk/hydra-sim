name:                hydra-sim
version:             0.1.0.0
synopsis:            Simulations for the Hydra Off-Chain Protocol
-- description:
license:             Apache-2.0
license-file:        LICENSE
author:              Philipp Kant
maintainer:          philipp.kant@iohk.io
copyright:           2019 Input Output (Hong Kong) Ltd.
-- category:
build-type:          Simple
extra-source-files:  CHANGELOG.md

executable hydra-sim
  hs-source-dirs:      src
  main-is:             Main.hs
  other-modules:       Channel
                     , HeadNode
                     , HeadNode.Snapshot
                     , HeadNode.Types
                     , Object
                     , Snapshot.Mock
                     , Snapshot.Simple
                     , Tx.Mock
  -- other-extensions:
  build-depends:       base >=4.12 && <4.13
                     , contra-tracer
                     , io-sim
                     , io-sim-classes
                     , time >= 1.8.0.2
                     , containers >= 0.6.0.1
  -- hs-source-dirs:
  default-language:    Haskell2010
  ghc-options:         -Wall
